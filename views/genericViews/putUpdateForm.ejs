<% layout("./boilerplate/boilerplate.ejs") %>

	<div class="">
		<h3>Update </h3>
		<form action="<%= route %><%= type.id %>?_method=PUT" method="POST">

			<div class="mb-3">
				<label id="name">Add Name of Plant Type</label>
				<input id="name" type="text" value="<%= type.name %>" required name="input[name]">
			</div>
			<div class="mb-3">
				<label id="description">Add Description of Plant Type</label>
				<textarea type="text" name="input[description]" id="description"
					value="" style="width:200px;height:200px"><%= type.description%></textarea>
			</div>

			<button class="btn btn-primary">Submit</button>
		</form>
		<form action="<%= route %><%= type.id %>?_method=DELETE" method="POST"><button
				class="btn btn-danger" type="submit">Delete</button></form>


	</div>